<body>

  <h1>ðŸŽ¡ Student Spinner</h1>
  <div id="spinner">Click "Spin" to choose a student!</div>
  <button onclick="spin()">Spin</button>

  <script>
    const students = [
      "Alice", "Ben", "Carlos", "Dina", "Ethan",
      "Fatima", "George", "Hana", "Isaac", "Julia"
    ];

    function spin() {
      const spinner = document.getElementById("spinner");
      spinner.textContent = "Spinning...";
      
      setTimeout(() => {
        const randomIndex = Math.floor(Math.random() * students.length);
        const selected = students[randomIndex];
        spinner.textContent = `ðŸŽ‰ Chosen Student: ${selected}`;
      }, 1000); // simulate spinning delay
    }
  </script>

</body>
